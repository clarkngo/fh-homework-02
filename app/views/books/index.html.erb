<div class="booyah-box col-10 offset-1">
  <h2><i>All Books</i></h2>
  <h3><i>Total Books: <%= Book.count %></i></h3>
  <table class="table-header">
    <tr>
      <th class="table-title">Title</th>
      <th class="table-year">Year</th>
      <th></th>
    </tr>
  <% @books.each do |book| %>
    <table class="table-contents">
      <tr>
        <th class="table-title"><%= book.book_info %></th>
        <th class="table-year"><%= book.year %></th>
        <th>
          <%= link_to 'Show', book_path(book), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', book_path(book), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
        </th>
      </tr>
    </table>
  <% end %> 
</div>
</table>
