<div class="booyah-box col-10 offset-1">
  <h1>Title: <%= @book.title %></h1> 
  <p>Author:           
    <% Authorship.all.each do |authorship| %>
      <% if authorship.book_id == @book.id %>
        <%= Author.find(authorship.author_id).full_name %>
      <% end %>
    <% end %>
  </p>
  <p>Genre: <%= @book.genre %></p>
  <p>Classification: <%= @book.classification %></p>  
  <p>Type: <%= @book.book_type %></p>
  <p>Year: <%= @book.year %></p>

  <br />

  <div class="float-right">
    <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary' %>
 

    <%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>

  </div>


</div>
