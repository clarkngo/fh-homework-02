<div class="booyah-box col-10 offset-1">
  <h1>Title: <%= @book.title %></h1> 
  <p>Sub-Title: <%= @book.sub_title %></p>
  <p>Genre: <%= @book.genre %></p>
  <p>Classification: <%= @book.classification %></p>  
  <p>Type: <%= @book.book_type %></p>
  <p>Year: <%= @book.year %></p>

  <br />

  <div class="float-right">
    <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
  </div>


</div>
<br />
<div class="booyah-box col-10 offset-1">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Full Name</th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td>  
            <%= link_to author.full_name, author_path(author) %>
          </td>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>
