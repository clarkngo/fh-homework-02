<!DOCTYPE html>
<html>
  <head>
    <title>FhHomework02</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <nav class="navbar"> 
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        <li class="nav-item">
          <button class="navbar-toggler" type="button">
            <%= link_to 'All books', root_path, class: 'navbar-brand'%>
          </button>
        </li>
        <li class="nav-item"> 
          <button class="navbar-toggler" type="button">
            <%= link_to 'All authors', authors_path, class: 'navbar-brand'%>
          </button>
        </li>
        <li class="nav-item">
          <button class="navbar-toggler" type="button">
            <%= link_to 'All authorships', authorships_path, class: 'navbar-brand'%>
          </button>
        </li>
        <li class="nav-item navbar-toggler">
          <%= link_to new_book_path, class: 'nav-link' do %>
          <i class="fa fa-plus-circle"></i>
            New Book
          <% end %>
        </li>
        <li class="nav-item">
          <%= form_tag root_path, method: :get do %>
            <%= text_field_tag :keyword, placeholder: "Search..." %>
            <%= submit_tag("Search") %>
          <% end %>    
        </li>
        <li class="nav-item">
          <%= form_for "", url: books_path, role: "search", method: :get do %>
            <%= label_tag("Search by:") %>
            <%= select_tag :search_by, options_for_select(
            [['Title', 'title'], ['Author', 'author'], ['Classification', 'classification'],
            ['Genre', 'genre'], ['Type', 'type_book']]) %>
            <%= text_field_tag :search, @search_term, placeholder: "Search..." %>
            <%= submit_tag("Search") %>
          <% end %>    
        </li>
          <li class="nav-item"> 
          <%= form_tag("/search", method: "get") do %>
            <%= label_tag(:q, "Search for:") %>
            <%= text_field_tag(:q) %>
            <%= submit_tag("Search") %>
          <% end %>
        </li>
        <li class="nav-item"> 
          <%= form_tag(books_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
            <%= submit_tag "Search" %>
          <% end %>
        </li>
        <li class="nav-item"> 
          <%= form_tag(books_path method: :get) do %>
            <%= text_field_tag :keyword, params[:keyword] %>
            <%= submit_tag "Search", name: nil %>
          <% end %>
        </li>
     </ul>
    </nav>
    <%= yield %>
  </body>
</html>
